{
  "name": "AgriFinance Pro - 農業経営管理システム",
  "short_name": "AgriFinance Pro",
  "description": "プロフェッショナル農業経営管理システム - 作業記録、農薬管理、収支分析、JA出荷対応",
  "version": "1.0.0",
  "start_url": "/dashboard",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#059669",
  "background_color": "#f0fdf4",
  "scope": "/",
  "lang": "ja",
  "dir": "ltr",
  
  "icons": [],
  
  "shortcuts": [],
  
  "categories": [
    "agriculture",
    "business", 
    "productivity",
    "finance",
    "utilities"
  ],
  
  "screenshots": [],
  
  "related_applications": [
    {
      "platform": "web",
      "url": "https://agrifinance-pro.vercel.app",
      "id": "agrifinance-pro-web"
    }
  ],
  
  "prefer_related_applications": false,
  
  "edge_side_panel": {
    "preferred_width": 480
  },
  
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  
  "handle_links": "preferred",
  
  "capture_links": "existing-client-navigate",
  
  "file_handlers": [
    {
      "action": "/dashboard/import",
      "accept": {
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xls", ".xlsx"],
        "application/json": [".json"]
      }
    }
  ],
  
  "protocol_handlers": [
    {
      "protocol": "web+agrifinance",
      "url": "/dashboard?action=%s"
    }
  ],
  
  "share_target": {
    "action": "/dashboard/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "photos",
          "accept": ["image/*"]
        }
      ]
    }
  }
}